# Auto detect text files and perform LF normalization
* text=auto

# Handle line endings for specific file types
*.sh text eol=lf
*.py text eol=lf
*.js text eol=lf
*.json text eol=lf
*.css text eol=lf
*.html text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.dmg binary
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary
*.otf binary
